doctype html
html(lang="en")
	head
		title=objects.nama
		link(rel='stylesheet', href='../css/themes/default/jquery.mobile-1.4.5.min.css')
		link(rel='stylesheet', href='../css/style.css')
		script("src=../js/jquery.js")
		script("src=../js/jquery.mobile-1.4.5.min.js")
	body
		#container
			#main
			- var obj = objects
			if obj
				.ui-corner-all.custom-corners
					.ui-bar.ui-bar-a
						h2 #{obj.nip}
						h3 #{obj.nama}
					.ui-body.ui-body-a
						table
							tr
								td='Jabatan'
								td=' : '
								td #{obj.jabatan}
							tr
								td='Bagian'
								td=' : '
								td #{obj.bagian}
							tr
								td='Alamat'
								td=' : '
								td #{obj.alamat}
							tr
								td='Gaji'
								td=' : '
								td #{obj.gaji}
				a(href='edit/#{obj._id}', rel='external', data-role='button', style='background:#459;') Ubah
				a(href='delete/#{obj._id}', rel='external', data-role='button', style='background:#954;') Hapus
				a(href='list', rel='external', data-role='button', style='background:#594;') Daftar Pegawai